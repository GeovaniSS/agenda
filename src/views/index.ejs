<%- include('includes/head') %>
<%- include('includes/nav') %>

<div class="search-contacts mobile">
  <span class="material-symbols-outlined">search</span>
  <input type="search" class="search-input">
</div>
<section>
  <div class="container">
    <% if(contacts.length > 0) { %>
      <div class="contacts">
        <h1 class="title">Contatos</h1>

        <%- include('includes/messages') %>

        <table class="table">
          <thead>
            <th class="th-name">Nome</th>
            <th class="th-email">E-mail</th>
            <th class="th-phone">Número de telefone</th>
          </thead>
          <tbody>
            <% contacts.forEach(contact => { %>
                <tr>
                  <td class="td-name">
                    <span><%=contact.name%></span>
                  </td>
                  <td class="td-email">
                    <span><%=contact.email%></span>
                  </td>
                  <td class="td-phone">
                    <span><%=contact.phone%></span>
                  </td>
                  <td class="td-btns">
                    <div class="contact-edit">
                      <a href="/contact/<%=contact._id%>">
                        <span class="material-symbols-outlined">edit</span>
                      </a>
                      <a href="/contact/<%=contact._id%>/delete">
                        <span class="material-symbols-outlined">delete</span>
                      </a>
                    </div>
                  </td>
                </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } else { %>
      <div class="empty-contacts">
        <%- include('includes/messages') %>
        <img src="/assets/img/empty.svg">
        <p>Ainda não há contatos</p>
      </div>
    <% } %>
  </div>
</section>

<%- include('includes/footer') %>