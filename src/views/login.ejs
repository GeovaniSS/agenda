<%- include('includes/head') %>
<%- include('includes/nav') %>

<section>
  <div class="login-container">
    <img src="./assets/img/login.svg" alt="Imagem de login">
    <div class="login">
      <h1>Login</h1>
      <p>Faça o login com a sua conta:</p>

      <%- include('includes/messages') %>

      <form action="/login" method="post" class="form">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <div class="form-group">
          <label for="email">E-mail:</label>
          <input type="email" name="email" id="email" class="form-input" placeholder="Endereço de e-mail">
        </div>
        <div class="form-group">
          <div class="form-group">
            <label for="password">Senha:</label>
            <input type="password" name="password" id="password" class="form-input" placeholder="Senha">
          </div>
          <div class="form-group forgotPwd">
            <div class="form-check">
              <input type="checkbox" name="keepLogged" id="keep-logged">
              <label for="keep-logged">Manter-se conectado</label>
            </div>
            <a href="/reset">
              <button type="button" class="text-btn bold">Esqueceu a senha?</button>
            </a>
          </div>
        </div>
        <button type="submit" class="btn-form">Entrar</button>
      </form>

      <div class="divider"></div>

      <div class="row-group">
        <p>Não possui uma conta ainda?</p>
        <a href="/register">
          <button class="text-btn bold">Cadastre-se</button>
        </a>
      </div>
    </div>
  </div>
</section>

<%- include('includes/footer') %>