<%- include('includes/head') %>
<%- include('includes/nav') %>

<section>
  <div class="container-row">
    <img src="/assets/img/login.svg" alt="Imagem de login">
    <div class="login">
      <h1>Cadastre-se</h1>
      <p>Crie a sua conta abaixo:</p>

      <%- include('includes/messages') %>

      <form action="/register" method="post" class="form">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <div class="form-group">
          <label for="email">E-mail:</label>
          <input type="email" name="email" id="email" class="form-input" placeholder="Endereço de e-mail">
        </div>
        <div class="form-group">
          <label for="password">Senha:</label>
          <input type="password" name="password" id="password" class="form-input" placeholder="Senha">
        </div>
        <button type="submit" class="btn-form">Criar conta</button>
      </form>

      <div class="divider"></div>

      <div class="row-group">
        <p>Já possui uma conta?</p>
        <a href='/login'>
          <button class="text-btn bold">Login</button>
        </a>
      </div>
    </div>
  </div>
</section>

<%- include('includes/footer') %>