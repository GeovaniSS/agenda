<%- include('includes/head') %>
<%- include('includes/nav') %>

<section>
  <div class="container-row">
    <div class="contact">
      <h1>
        <% if(!contact._id) {%>
          Criar Contato
        <% } else { %>
          Editar Contato
        <% } %>
      </h1>

      <%- include('includes/messages') %>

      <% if(!contact._id) { %>
        <form action="/contact/create" method="post" class="form">
      <% } else { %>
        <form action="/contact/<%=contact._id%>/edit" method="post" class="form">
      <% } %> 
      
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <div class="form-group">
          <label for="name">Nome: </label>
          <input type="text" name="name" id="name" class="form-input" placeholder="Nome Completo"
          value="<%= contact.name %>">
        </div>
        <div class="form-group">
          <label for="email">E-mail:</label>
          <input type="email" name="email" id="email" class="form-input" placeholder="Endereço de e-mail"
          value="<%= contact.email %>">
        </div>
        <div class="form-group">
          <label for="phone">Telefone:</label>
          <input type="text" name="phone" id="phone" class="form-input" placeholder="Número de telefone"
          value="<%= contact.phone %>">
        </div>
        
        <button type="submit" class="btn-form">
          <% if(!contact._id) {%>
            Criar Contato
          <% } else { %>
            Editar Contato
          <% } %>
        </button>
      </form>
    </div>
</section>

<%- include('includes/footer') %>